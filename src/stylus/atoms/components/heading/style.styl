.heading
  background url('images/bg-slash.gif')
  font-size 1.6rem
  letter-spacing 1px
  padding 10px 12px

.scroll-list
  list-style none
  margin-bottom 30px
  max-height 220px
  overflow-y auto

  & .scroll-item
    &:nth-of-type(even) a
      background url('images/bg-slash.gif')

    & a
      align-items center
      color color-text
      display flex
      padding 10px 15px
      transition background-color hover-animation-duration

      &:hover
        background-color #fafaf8

  & .date
    font-size 1.0rem
    font-weight bold
    letter-spacing 1px
    width 19%

  & .category
    background-color color-link
    border-radius 5px
    color color-text-outlined
    font-size 1.0rem
    letter-spacing 1px
    line-height 16px
    text-align center
    width 8%

    &.news
      background-color #2c3c53

  & .title
    font-weight 1.2rem
    padding-left 15px
    overflow hidden
    text-overflow ellipsis
    // white-space nowrap // TODO デザインの崩れを防ぐ
    width 73%
