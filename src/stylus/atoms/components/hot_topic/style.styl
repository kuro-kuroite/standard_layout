.hot-topic
  box-shadow 0 6px 4px -4px rgba(0, 0, 0, 0.15)
  display flex
  height 300px
  margin-bottom 30px
  line-height 1.6
  position relative
  transition opacity 0.15s

  &:hover
    opacity 0.85

  & .image
    height 100%
    width 50%

  & .content
    background-color #2d3d54
    height 100%
    padding 105px 25px 0
    width 50%

  & .title
    color color-text-outlined
    font-size 2.0rem
    font-weight normal
    margin-bottom 15px

  & .desc
    color color-gray-lt

  & .date
    background-color color-base
    color #2d3d54
    font-weight bold
    font-size 1.1rem
    left 0
    letter-spacing 1px
    line-height 1
    padding 4px
    position absolute
    text-align center
    top 60px
    width 140px
