.documents
  margin 10px 10px 30px

  &,
  & ul
    list-style-type none

  & a
    &:hover
      text-decoration underline

  & > li
    & .tytle
      border-left 5px solid color-link
      font-size 1.4rem
      line-height 1.2
      margin 15px 0
      padding-left 8px

    & + li
      margin-top 25px
    & ul
      margin 15px

      & > li
        margin-bottom 15px
        padding-left 10px
        background url('./images/arrow.gif') no-repeat left center
