.ranking
  list-style-type none
  margin-bottom 30px
  counter-reset ranking

  & .ranking-item
    margin-top 15px
    position relative

    &:nth-of-type(1) .order,
    &:nth-of-type(2) .order,
    &:nth-of-type(3) .order
      border none
      color color-text-outlined
      font-weight normal
      line-height 18px

    &:nth-of-type(1) .order
      background-color #dab413

    &:nth-of-type(2) .order
      background-color #6e7b84

    &:nth-of-type(3) .order
      background-color #a0541a



    & a
      display block
      font-size 0
      transition opacity 0.15s

      &:hover
        opacity 0.8

  & .image
    height 55px
    margin-right 20px
    width 55px

  & .text
    color #000
    display inline-block
    font-size 1.2rem
    line-height 1.5
    vertical-align top
    width 190px

  & .order
    background-color #fff
    border 1px solid #ccc
    border-radius 50%
    color #aaa
    display inline-block
    font-weight bold
    height 20px
    left 55px - 20px
    line-height 16px
    margin 0 10px
    position absolute
    text-align center
    top 0 - (20px / 2)
    vertical-align 20px
    width 20px

    &::before
      content counter(ranking)
      counter-increment ranking
      display inline-block
      font-size 1.0rem
